{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "build",
    "removeComments": true,
    "target": "es6",
    "paths": {
      "react": ["node_modules/@types/react"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}

